<div class="row">
  <div class="col-md-6">
    <%= form_for @admin_status, html: { class: 'form-horizontal' } do |f| %>
      <%= render "shared/error_messages", target: @admin_status %>
      <div class="form-group">
        <%= f.label :name, class: 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :placement, class: 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.text_field :placement, class: 'form-control' %>
          (Must be a number)
        </div>
      </div>

      <div class="col-md-9 col-md-offset-3">
        <%= f.submit nil, class: 'btn btn-primary' %>
        <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                    admin_statuses_path, class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
