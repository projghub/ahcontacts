<%- model_class = Admin::Status -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @admin_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:placement) %>:</strong></dt>
  <dd><%= @admin_status.placement %></dd>
</dl>

<div class="col-md-12">
  <%= link_to t('.back', default: t("helpers.links.back")),
              admin_statuses_path, class: 'btn'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_admin_status_path(@admin_status), class: 'btn' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              admin_status_path(@admin_status),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>
