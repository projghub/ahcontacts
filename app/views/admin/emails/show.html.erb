<%- model_class = Admin::Email -%>
<%- provide(:title, model_class.model_name.human.titleize) -%>
<%= admin_page_header(yield(:title)) %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %></strong></dt>
  <dd><%= @admin_email.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject) %></strong></dt>
  <dd><%= @admin_email.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from_name) %></strong></dt>
  <dd><%= @admin_email.from_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from_email) %></strong></dt>
  <dd><%= @admin_email.from_email %></dd>
</dl>

<div class="col-md-12">
  <%= link_to t('.back', default: t('helpers.links.back')),
              admin_emails_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t('helpers.links.edit')),
              edit_admin_email_path(@admin_email), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t('helpers.links.destroy')),
              admin_email_path(@admin_email),
              method: :delete,
              data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>
