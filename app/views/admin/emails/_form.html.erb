<script>
  $(function() {
    $("#tabs").tabs();
  });
</script>

<%= form_for @admin_email, html: { class: 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', target: @admin_email %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name, class: 'control-label col-md-3' %>
        <a href="#" rel="tooltip" title="<%= t("tooltips.emails.name") %>"><i class="icon-question-sign"></i></a>
        <div class="col-md-9">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :subject, class: 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.text_field :subject, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :from_name, class: 'control-label col-md-3' %>
        <a href="#" rel="tooltip" title="<%= t("tooltips.emails.from_name") %>"><i class="icon-question-sign"></i></a>
        <div class="col-md-9">
          <%= f.text_field :from_name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :from_email, class: 'control-label col-md-3' %>
        <a href="#" rel="tooltip" title="<%= t("tooltips.emails.from_email") %>"><i class="icon-question-sign"></i></a>
        <div class="col-md-9">
          <%= f.text_field :from_email, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div id="tabs">
        <ul>
          <li><a href="#tabs-1">HTML Version</a></li>
          <li><a href="#tabs-2">Text Version</a></li>
        </ul>
        <div id="tabs-1">
          <%= f.text_area :email_html, class: 'form-control' %>
        </div>
        <div id="tabs-2">
          <%= f.text_area :email_text, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="col-md-9 col-md-offset-3">
        <%= f.submit nil, class: 'btn btn-primary' %>
        <%= link_to t('.cancel', default: t("helpers.links.cancel")),
              admin_emails_path, class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
