<%- model_class = Advertiser::Email -%>
<%- provide(:title, model_class.model_name.human) -%>
<%- provide(:description, t("emails.show.description")) -%>
<%- provide(:navigation_highlight, "campaigns") -%>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @advertiser_email.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @advertiser_email.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from_name) %>:</strong></dt>
  <dd><%= @advertiser_email.from_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from_email) %>:</strong></dt>
  <dd><%= @advertiser_email.from_email %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', default: t("helpers.links.back")),
              advertiser_emails_path, class: 'btn'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_advertiser_email_path(@advertiser_email), class: 'btn' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              advertiser_email_path(@advertiser_email),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>