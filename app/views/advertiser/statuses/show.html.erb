<%- model_class = Advertiser::Status -%>
<%- provide(:title, model_class.model_name.human.titleize) -%>
<%= advertiser_page_header(yield(:title)) %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %></strong></dt>
  <dd><%= @advertiser_status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:placement) %></strong></dt>
  <dd><%= @advertiser_status.placement %></dd>
</dl>

<div class="col-md-12">
  <%= link_to t('.back', default: t('helpers.links.back')),
              advertiser_statuses_path, class: 'btn btn-default' %>
  <%= link_to t('.edit', default: t('helpers.links.edit')),
              edit_advertiser_status_path(@advertiser_status), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t('helpers.links.destroy')),
              advertiser_status_path(@advertiser_status),
              method: :delete,
              data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>
