<%- model_class = Advertiser::Contact -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @advertiser_contact.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @advertiser_contact.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></dt>
  <dd><%= @advertiser_contact.company_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @advertiser_contact.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address2) %>:</strong></dt>
  <dd><%= @advertiser_contact.address2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @advertiser_contact.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:region) %>:</strong></dt>
  <dd><%= @advertiser_contact.region %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_code) %>:</strong></dt>
  <dd><%= @advertiser_contact.postal_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @advertiser_contact.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @advertiser_contact.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @advertiser_contact.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:website) %>:</strong></dt>
  <dd><%= @advertiser_contact.website %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fax) %>:</strong></dt>
  <dd><%= @advertiser_contact.fax %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_form_url) %>:</strong></dt>
  <dd><%= @advertiser_contact.contact_form_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deleted_at) %>:</strong></dt>
  <dd><%= @advertiser_contact.deleted_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              advertiser_contacts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_advertiser_contact_path(@advertiser_contact), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              advertiser_contact_path(@advertiser_contact),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<div class="row">
  <div class="span5">
    <% if @notes.count > 0 %>
      <table class="table table-striped">
        <% @notes.each do |note| %>
          <tr>
            <td>
              <span class="note_user"><%= note.user %></span><br />
              <span class="note_created_at"><%=l note.created_at, format: :created_at_date %></span>
            </td>
            <td>
              <%= note.description %>
            </td>
          </tr>
        <% end %>
      </table>
    <% else %>
      There are no notes
    <% end %>
  </div>
  <div class="span5">
    <%= form_for [@advertiser_contact, @note] do |f| %>
      <div class="control-group">
        <div class="controls">
          <%= f.text_area :description %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit nil, name: nil, value: "Add Note", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
