<div id="row advertiser_search_form">
  <div id="col-md-9">
    <%= search_form_for @q, html: { class: 'form-horizontal' } do |f| %>
      <div class="form-group">
        <%= f.label :first_name_cont, class: 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.text_field :first_name_cont, class: 'text-field' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :last_name_cont, class: 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.text_field :last_name_cont, class: 'text-field' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email_cont, class: 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.text_field :email_cont, class: 'text-field' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :phone_cont, class: 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.text_field :phone_cont, class: 'text-field' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :website_cont, class: 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.text_field :website_cont, class: 'text-field' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :company_name_cont, class: 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.text_field :company_name_cont, class: 'text-field' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :status_id_eq, class: 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.collection_select(:status_id_eq, Status.all, :id, :name, include_blank: true) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :user_id_eq, class: 'control-label col-md-3' %>
        <div class="col-md-9">
          <%= f.collection_select(:user_id_eq, User.all, :id, :first_name, include_blank: true) %>
        </div>
      </div>

      <div class="col-md-12">
        <%= f.submit nil, class: 'btn btn-primary' %>
        <%= link_to "Reset", url_for, class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
